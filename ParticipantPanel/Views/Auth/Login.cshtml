@{
    Layout = "_LayoutAuth";
}

@model LoginVM

<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a href="/"><b>Admin</b>LTE</a>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Register a new membership</p>

      <form  method="post">
        <div class="input-group">
          <input type="email" class="form-control" asp-for="Email" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <span class="mb-3" asp-validation-for="Email"></span> <br/>

        <div class="input-group">
          <input type="password" class="form-control" asp-for="Password" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <span class="mb-3" asp-validation-for="Password"></span> <br/>


        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="agreeTerms" name="terms" value="agree">
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <input type="submit" value="Login" class="btn btn-primary btn-block" />
          </div>
          <!-- /.col -->
        </div>

      </form>

      <div class="social-auth-links text-center">
        <p>- OR -</p>
        
        <a href="/auth/register" class="btn btn-block btn-danger">
          Register
        </a>
      </div>

      <a href="/auth/login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>

</body>

